{
  "name": "cosmos-hub",
  "version": "1.0.0",
  "description": "Cosmos Hub - A comprehensive blockchain and DeFi platform",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "cd frontend && npm run start",
    "start:backend": "cd backend && npm run start",
    "test": "npm run test:frontend && npm run test:backend && npm run test:db",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "test:db": "cd db && npm test",
    "test:watch": "concurrently \"npm run test:watch:frontend\" \"npm run test:watch:backend\"",
    "test:watch:frontend": "cd frontend && npm run test:watch",
    "test:watch:backend": "cd backend && npm run test:watch",
    "db:generate": "cd db && npx prisma generate",
    "db:push": "cd db && npx prisma db push",
    "db:migrate": "cd db && npx prisma migrate dev",
    "db:studio": "cd db && npx prisma studio"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
